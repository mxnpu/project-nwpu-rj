<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.goodfriend.model.Friends" table="friends" catalog="goodfriend">
        <id name="idFriends" type="java.lang.Integer">
            <column name="id_friends" />
            <generator class="increment" />
        </id>
        <many-to-one name="userByFriendId" class="com.goodfriend.model.User" fetch="select">
            <column name="friend_id" not-null="true" />
        </many-to-one>
        <many-to-one name="userByUserId" class="com.goodfriend.model.User" fetch="select">
            <column name="user_id" not-null="true" />
        </many-to-one>
        <property name="success" type="java.lang.String">
            <column name="success" length="2" />
        </property>
        <property name="group" type="java.lang.String">
            <column name="group" length="50" />
        </property>
    </class>
</hibernate-mapping>
