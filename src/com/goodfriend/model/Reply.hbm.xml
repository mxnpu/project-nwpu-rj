<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.goodfriend.model">
    <class name="Reply" table="reply" catalog="goodfriend">
        <id name="idReply" type="java.lang.Integer">
            <column name="id_reply" />
            <generator class="increment"></generator>
        </id>
        <many-to-one name="item" class="Item" fetch="select" cascade="all">
            <column name="item_id" not-null="true" />
        </many-to-one>
        <many-to-one name="user" class="User" fetch="select" cascade="all">
            <column name="from" not-null="true" />
        </many-to-one>
        <property name="content" type="java.lang.String">
            <column name="content" length="250" not-null="true" />
        </property>
    </class>
</hibernate-mapping>
