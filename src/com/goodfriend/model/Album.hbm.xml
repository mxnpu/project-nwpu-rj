<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.goodfriend.model.Album" table="album" catalog="goodfriend">
        <id name="idAlbum" type="java.lang.Integer">
            <column name="id_album" />
            <generator class="increment"></generator>
        </id>
        <many-to-one name="item" class="com.goodfriend.model.Item" fetch="select">
            <column name="item_id" not-null="true" />
        </many-to-one>
        <property name="title" type="java.lang.String">
            <column name="title" length="100" />
        </property>
		<property name="cover" type="java.lang.String">
			<column name="cover" length="100"></column>
		</property>
		<property name="description" type="java.lang.String">
			<column name="description" length="200"></column>
		</property>
        <set name="pictures" inverse="true">
            <key>
                <column name="album_id" />
            </key>
            <one-to-many class="com.goodfriend.model.Picture" />
        </set>
    </class>
</hibernate-mapping>
