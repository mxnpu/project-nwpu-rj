<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC 
	"-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" 
	"http://struts.apache.org/dtds/struts-2.1.dtd">


<struts>
    <package name="admin" extends="struts-default" namespace="/admin">
        
        <action name="login" class="adminLoginAction" method="login">
            <result name="index">/admin/index.jsp</result>
            <result name="login_success">/admin/login_success.jsp</result>
        </action>
        
        <action name="logout" class="com.goodfriend.admin.action.LoginAction" method="logout">
			<result name="logout" type="redirect">/admin/logout_success.jsp</result>
        </action>
        
        <action name="add" class="com.goodfriend.admin.action.ManagerAdminAction" method="add">
			<result name="success" type="redirect">/admin/add_success.jsp</result>
			<result name="failed" type="redirect">/admin/add_failed.jsp</result>
		</action>
		
    </package>

    <!-- Add packages here -->

</struts>
