<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.goodfriend.model">
    <class name="User" table="user" catalog="goodfriend"
    		dynamic-insert="true" dynamic-update="true">
        <id name="idUser" type="java.lang.Integer">
            <column name="id_user" />
            <generator class="increment" />
        </id>
        <property name="userName" type="java.lang.String">
            <column name="user_name" length="16" not-null="true" />
        </property>
        <property name="password" type="java.lang.String">
            <column name="password" length="16" not-null="true" />
        </property>
        <property name="realName" type="java.lang.String">
            <column name="real_name" length="16" not-null="true" />
        </property>
        <property name="gender" type="java.lang.String">
            <column name="gender" length="2">
                <comment>F or M</comment>
            </column>
        </property>
        <property name="birthday" type="java.util.Date">
            <column name="birthday" length="0" />
        </property>
        <property name="phone" type="java.lang.String">
            <column name="phone" length="16" />
        </property>
        <property name="email" type="java.lang.String">
            <column name="email" length="45" />
        </property>
        <property name="hoby" type="java.lang.String">
            <column name="hoby" length="150" />
        </property>
        <property name="photo" type="java.lang.String">
            <column name="photo" length="150" />
        </property>
        <property name="lastLogoutTime" type="java.sql.Timestamp">
            <column name="last_logout_time" length="0" />
        </property>
        <set name="items" inverse="true" cascade="all" lazy="false">
            <key>
                <column name="user" not-null="true" />
            </key>
            <one-to-many class="Item" />
        </set>
        <set name="friends" inverse="true" cascade="all">
            <key>
                <column name="friend_id" not-null="true" />
            </key>
            <one-to-many class="Friends" />
        </set>
        <set name="replies" inverse="true" cascade="all">
            <key>
                <column name="from" not-null="true" />
            </key>
            <one-to-many class="Reply" />
        </set>
        <set name="friendsForOther" inverse="true" cascade="all">
            <key>
                <column name="user_id" not-null="true" />
            </key>
            <one-to-many class="Friends" />
        </set>
        <set name="gossips" inverse="true" cascade="all" lazy="false" >
            <key>
                <column name="from_id" not-null="true" />
            </key>
            <one-to-many class="Gossip" />
        </set>
    </class>
</hibernate-mapping>
