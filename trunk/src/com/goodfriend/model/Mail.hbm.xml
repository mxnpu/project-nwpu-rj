<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.goodfriend.model.Mail" table="mail" catalog="goodfriend">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="increment" />
        </id>
        <many-to-one name="fromUser" class="com.goodfriend.model.User" fetch="select" cascade="save-update">
            <column name="from_user" />
        </many-to-one>
        <many-to-one name="toUser" class="com.goodfriend.model.User" fetch="select" cascade="save-update">
            <column name="to_user" not-null="true" />
        </many-to-one>
        <property name="time" type="java.sql.Timestamp">
            <column name="time" length="0" not-null="true" />
        </property>
        <property name="title" type="java.lang.String">
            <column name="title" length="50" />
        </property>
        <property name="content" type="java.lang.String">
            <column name="content" length="65535" />
        </property>
        <property name="opened" type="java.lang.Boolean">
            <column name="opened" not-null="true" />
        </property>
    </class>
</hibernate-mapping>
